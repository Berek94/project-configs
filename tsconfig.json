{
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM"],
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["./src/index.ts"]
}
